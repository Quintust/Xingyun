<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:src="@drawable/logo256" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/resetpwd_edit_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/user_green"
            android:ems="10"
            android:hint="请输入您的用户名"
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/resetpwd_edit_pwd_old"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/password"
            android:ems="10"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/resetpwd_edit_pwd_new"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/password"
            android:ems="10"
            android:hint="请确认您的密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />

        <Button
            android:id="@+id/register_btn_sure"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/bgmain"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/register_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="#f71818"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>